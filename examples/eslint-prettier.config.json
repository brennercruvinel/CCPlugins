{
  "hooks": {
    "PostToolUse": [{
      "matcher": "Edit|MultiEdit|Write",
      "hooks": [
        {
          "type": "command",
          "command": "npx eslint --fix \"$file_path\""
        },
        {
          "type": "command",
          "command": "npx prettier --write \"$file_path\""
        }
      ]
    }]
  }
}